<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  <item android:drawable="@drawable/hbutton_pressed"-->
    <item android:state_pressed="true">
	<shape android:shape="rectangle">

    <corners android:radius="10.0dip" />
    <gradient android:startColor="#fffcfcfc" android:endColor="#E7E8CF" android:angle="270.0" android:type="linear" />
    <stroke android:width="1.0dip" android:color="#898D0D" />
</shape>
</item>

    <!--  <item android:drawable="@drawable/hbutton_focused" -->
        <item android:state_focused="true">
            <shape android:shape="rectangle">
        <corners android:radius="10.0dip" />
    <gradient android:startColor="#ffed387a" android:endColor="#ffe76695" android:angle="90.0" android:type="linear" />
    </shape>
      </item>  
      
    <!--   <item android:drawable="@drawable/hbutton_normal" /> -->
    <item>
       <shape android:shape="rectangle"> 
     <corners android:radius="10.0dip" />
    <gradient android:startColor="#ffe8e8e8" android:endColor="#fffcfcfc" android:angle="90.0" android:type="linear" />
    <stroke android:width="1.0dip" android:color="#ffb3b3b3" />
           
           </shape>
        </item>
</selector>